<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
    android:onClick="songSelected">
    <!--clicking on a song plays music (might need to be revised)-->

    <!--  ListRow Left side Thumbnail image -->
    <RelativeLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <TextView
            android:id="@+id/number"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="1)"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20dip"
            android:textStyle="bold"
            />

        <CheckBox
            android:id="@+id/downloadcheckbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:background="@drawable/download_check"
            android:onClick="updateSelectedNumber"
            android:layout_toEndOf="@+id/number"
            />

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_centerVertical="true">
        <!-- Title Of Song-->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Song"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20dip"
            android:textStyle="bold"/>

        <!--Artist Name-->
        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textAlignment="textStart"
            android:textColor="#343434"
            android:textSize="15dip"
            android:layout_marginTop="1dip"
            android:text="Artist" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.6"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/downloadcompleted"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAlignment="viewEnd"
            />

    </RelativeLayout>

</LinearLayout>
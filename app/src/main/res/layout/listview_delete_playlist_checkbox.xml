<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip">
    <!--clicking on a song plays music (might need to be revised)-->

    <!--  ListRow Left side Thumbnail image -->
    <RelativeLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <CheckBox
            android:id="@+id/addcheckbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:background="@drawable/download_check"
            android:onClick="updateSelectedNumber"
            />

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_centerVertical="true">
        <!-- Title Of Song-->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Song"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20dip"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/numSongs"
            android:text=""
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="hc3.m4.NewReleases">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/localLibraryRelativeLayout">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:background="@drawable/list_selector"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_below="@+id/appbar">

            <ImageButton
                android:id="@+id/backbutton"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:src="@drawable/back"
                android:background="@android:color/transparent"
                android:onClick="backButton"
                />

            <TextView
                android:id="@+id/title"
                android:padding="5dip"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="New Releases"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="20dip"
                android:textStyle="bold"
                android:layout_weight=".5"/>

            <Button
                android:id="@+id/downloadmultiple"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Download Multiple Songs"
                android:textColor="#040404"
                android:typeface="sans"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/title"
                android:onClick="downloadMultipleSongs"/>

            <Button
                android:id="@+id/downloadselected"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Download Selected Songs"
                android:textColor="#040404"
                android:typeface="sans"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/title"
                android:onClick="downloadSelectedSongs"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/header2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@drawable/list_selector"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_below="@+id/header"
            >

            <RelativeLayout android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dip">

                <CheckBox
                    android:id="@+id/downloadcheckbox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:background="@drawable/download_check"
                    />

                <ImageView
                    android:id="@+id/list_image"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    />

            </RelativeLayout>

                <TextView
                    android:id="@+id/selectall"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Select All"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="20dip"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/numberdownload"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:gravity="center_vertical"
                    android:text="0 songs selected for download"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textStyle="bold"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header2"
            android:layout_above="@+id/gridLayout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:columnCount="2"
            android:rowCount="1"
            android:id="@+id/gridLayout"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:text="Local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_local"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                />

            <Button
                android:text="Online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_online"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textColor="@android:color/holo_red_dark"
                android:clickable="false"
                android:textStyle="normal|bold"/>

        </GridLayout>

    </RelativeLayout>

    <fragment
        android:name="hc3.m4.MusicController_Simple"
        tools:layout="@layout/frag_music_controller_simple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/musicController" />

</android.support.design.widget.CoordinatorLayout>
